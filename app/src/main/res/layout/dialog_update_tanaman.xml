<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextUpdateNamaTanaman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Nama Tanaman"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextUpdateBagianGuna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bagian Guna"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextUpdateKegunaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kegunaan"
        android:minHeight="48dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextUpdateGambarUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="URL Gambar"
        android:minHeight="48dp"
        android:inputType="text" />
</LinearLayout>
